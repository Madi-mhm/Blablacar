<div class="cardContainer">

    <div class="card">

        <div class="upSideLeft">  
            <div class="departure"><span class="departLocation"></span>{{product.departure}}</div>      
            <div class="destination"><span class="destinationLocation"></span>{{product.destination}}</div>  
            <div class="places">{{product.seats}} seats disponible</div>          
        </div>

        <div class="upSideRight">
            <div class="date">21/05/23</div>  

            <div class="profile">

                <div class="account">
                
                    <div class="profilPic"></div>

                    <div class="userName">
                        <p>{{product.driver.firstName}} {{product.driver.lastName | upper}}</p>
                        <p>‚≠ê 4/7</p>
                    </div>      

                </div>

                <p class="price">{{product.price}}$</p>
            </div>

        </div>   

    </div>
    
    <div class="downSide">
        <ul>
            {% for rule in product.rules %}
               <li> {{rule.name}}</li>
            {%endfor%}            
        </ul>
    </div>

</div>




